# Loop
let sum = 0;
let i = 0;
while (i < 10) {
    i = i + 1;
    sum = sum + 2;
}
assert(i == 10);
assert(sum == 20);

let res = 0;
i = 0;
while (i < 10) {
    if (i % 2 == 0) {
        res = res + i;
    }
    i = i + 1;
}
assert(i == 10);
assert(res == 20);

# Nested loops
i = 0;
res = 0;
while (i < 5) {
    let j = 0;
    while (j < 6) {
        res = res + 1;
        j = j + 1;
    }
    i = i + 1;
    assert(j == 6);
}
assert(i == 5);
assert(res = 30);

i = 10;
let string = "";
while (i > 0) {
    if (i % 5 == 0) {
        string = string + "foo";
    } else {
        string = string + "!";
    }
    i = i - 1;
}
assert(string == "foo!!!!foo!!!!");
